{
  "name": "project-mate-cli",
  "version": "1.0.0",
  "description": "A CLI tool for managing projects",
  "main": "dist/bin/pm.js",
  "bin": {
    "pm": "./dist/bin/pm.js"
  },
  "scripts": {
    "build": "tsc && ncc build dist/bin/pm.js -o dist/ncc",
    "start": "node dist/bin/pm.js",
    "pkg": "pkg .",
    "pack:mac": "pkg dist/ncc/index.js --targets node18-macos-x64 --output dist/pm-mac --debug && ./scripts/build-pkg.sh"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "author": "",
  "license": "ISC",
  "resolutions": {
    "@isaacs/cliui": "7.0.4",
    "string-width": "4.2.3",
    "strip-ansi": "6.0.1",
    "ansi-regex": "5.0.1",
    "wrap-ansi": "7.0.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "ora": "^8.2.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.11.17",
    "@vercel/ncc": "^0.38.3",
    "electron-builder": "latest",
    "pkg": "latest",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
